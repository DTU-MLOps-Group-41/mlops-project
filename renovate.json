{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "vulnerabilityAlerts": { "enabled": true },
  "lockFileMaintenance": { "enabled": true },
  "labels": ["dependencies"],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchDepNames": ["python", "**/python"],
      "matchDatasources": ["python-version", "docker"],
      "allowedVersions": "/^3\\.12/",
      "description": "Pin to Python 3.12 (that is currently latest-2)"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    },
    {
      "matchManagers": ["pep621"],
      "rangeStrategy": "update-lockfile",
      "description": "Update uv.lock without changing version ranges in pyproject.toml"
    },
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "groupName": "Docker images",
      "description": "Group Docker updates together"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "description": "Group and automerge GitHub Actions updates"
    }
  ]
}
